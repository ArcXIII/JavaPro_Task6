<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1757758918782-1" author="XIII">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
        </createTable>
        <insert tableName="users">
            <column name="username" value="Jack Ryan"/>
        </insert>
        <insert tableName="users">
            <column name="username" value="Nick Fury"/>
        </insert>
    </changeSet>
    <changeSet id="1758305644035-1"
               author="XIII">
        <createTable tableName="products">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_products"/>
            </column>
            <column name="account_number"
                    type="VARCHAR(255)"/>
            <column name="balance"
                    type="NUMERIC"/>
            <column name="type"
                    type="VARCHAR(255)"/>
            <column name="user_id"
                    type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1758305644035-2"
               author="XIII">
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="products"
                                 constraintName="FK_PRODUCTS_ON_USER"
                                 referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>
    <changeSet id="1758309185208-1" author="XIII">
        <insert tableName="products">
            <column name="id" value="1"/>
            <column name="type" value="CARD"/>
            <column name="account_number" value="0123456789"/>
            <column name="balance" value="100.00"/>
            <column name="user_id" value="1"/>
        </insert>
        <insert tableName="products">
            <column name="id" value="2"/>
            <column name="type" value="ACCOUNT"/>
            <column name="account_number" value="9876543210"/>
            <column name="balance" value="200.00"/>
            <column name="user_id" value="2"/>
        </insert>
    </changeSet>
    <changeSet id="1758525824438-1" author="XIII">
        <createIndex tableName="products" indexName="idx_user_id">
            <column name="user_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>