<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1759166309464-1" author="XIII">
        <createTable tableName="payments">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_payments"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="product_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="payment_amount" type="NUMERIC">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createIndex tableName="payments" indexName="idx_payments_user_id">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="payments" indexName="idx_payments_product_id">
            <column name="product_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>